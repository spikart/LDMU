	<description>PLG_CONTENT_FONTICONS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="fonticons">fonticons.php</filename>
		<filename>index.html</filename>	
		<filename>license-icomoon.txt</filename>
		<folder>assets</folder>	  
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_fonticons.ini</language>
