	<config>
		<fields name="params">
			<fieldset name="PLG_CONTENT_FONTICONS_TAB_NAME">
				
				<field type="spacer" name="spacerwarn" label="PLG_CONTENT_FONTICONS_WARN" />
				<field type="spacer" name="spacerimimg" label="PLG_CONTENT_FONTICONS_ICOMOON_IMG" />
				
				<field name="icomoon" type="hidden"
					default="1"
					description="Enable IcoMoon font"
					label="PLG_CONTENT_FONTICONS_ICOMOON_IMG_DESC"
				/>
				
				<field type="spacer" name="spacericodesc" label="PLG_CONTENT_FONTICONS_ICOMOON_DESC" />
				<field type="spacer" name="spacer1" hr="true" />

				
			</fieldset>
