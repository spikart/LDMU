<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site">
	<name>MOD_FEEDBACK_TITLE</name>
	<author>Ivan Artamonov</author>
	<creationDate>July 2014</creationDate>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@freelancer.dn.ua</authorEmail>
	<authorUrl>freelancer.dn.ua</authorUrl>
	<version>3.0.0</version>
	<description>MOD_FEEDBACK_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_feedback">mod_feedback.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_feedback.ini</language>
		<language tag="en-GB">en-GB.mod_feedback.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="email" type="email"
                        label="JGLOBAL_EMAIL"
                        description="COM_ADMIN_USER_FIELD_EMAIL_DESC"
                        required="true"
                        size="30"
                        class="inputbox"
                        validate="email" />
                <field name="title" type="text" default="" label="Form title" description="" size="30" />
                <field name="success_message" type="text" default="" label="Success message" description="" size="300" />
			</fieldset>
		</fields>
	</config>
</extension>
